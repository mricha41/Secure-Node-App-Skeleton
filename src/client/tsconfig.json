{
    "compilerOptions": {
      "composite": true,
      "rootDir": ".",
      "baseUrl": ".",
      "target": "es2022",
      "useDefineForClassFields": true,
      "module": "es2022",
      "lib": ["ES2022", "DOM"],
      "moduleResolution": "bundler",
      "strict": true,
      //"sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "noEmit": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["vite/client", "node"]
    }
}